{% extends 'menu.html.twig' %}

{% block title %}Hello Profile!{% endblock %}

{% block container %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Le nom: {{ name }}</h1>
    <h2>Le mail: {{ email }}</h2>
    <p>Upvote: {{ upvote }}</p>
    <p>Downvote: {{ downvote }}</p>

    <form action="{{ path('app_vote', { sellerId: '2' }) }}" method="post">
        <button {{ upvoteDisabled }} class="" name="vote" value="up">vote up</button>
        <button {{ downvoteDisabled }} class="" name="vote" value="down">vote down</button>
    </form>
</div>
{% endblock %}
