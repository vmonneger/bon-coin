{% extends 'menu.html.twig' %}

{% block title %}Hello Profile!{% endblock %}

{% block container %}

{% block javascript %}
    {{ parent() }}
    <script src="{{ asset('js/vote_profil.js') }}"></script>
{% endblock %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Le nom: {{ name }}</h1>
    <h2>Le mail: {{ email }}</h2>
    <p>Upvote: {{ upvote }}</p>
    <p>Downvote: {{ downvote }}</p>

    {# <form action="{{ path('app_vote', { sellerId: app.request.get('userID') }) }}" method="post"> #}
        <button {{ upvoteDisabled }} class="js-vote-up" data-direction="up" name="vote" value="up">vote up</button>
        <button {{ downvoteDisabled }} class="js-vote-down" data-direction="down" name="vote" value="down">vote down</button>
        <span class="js-vote-total">6</span>
    {# </form> #}
</div>
{% endblock %}
